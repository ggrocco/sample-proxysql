#file proxysql.cfg

datadir="/var/lib/proxysql"

admin_variables=
{
	admin_credentials="admin:admin;radmin:radmin;cluster:secretcluster"
	mysql_ifaces="0.0.0.0:6032;/tmp/proxysql_admin.sock"
	web_enabled=true

	cluster_username="cluster"
	cluster_password="secretcluster"
	cluster_check_interval_ms=200
	cluster_check_status_frequency=100
	cluster_mysql_query_rules_save_to_disk=true
	cluster_mysql_servers_save_to_disk=true
	cluster_mysql_users_save_to_disk=true
	cluster_proxysql_servers_save_to_disk=true
}

proxysql_servers =
(
	{
		hostname="sample-proxysql_proxysql_1"
		port=6032
		comment="cluster 1"
	},
	{
		hostname="sample-proxysql_proxysql_2"
		port=6032
		comment="cluster 2"
	},
	{
		hostname="sample-proxysql_proxysql_3"
		port=6032
		comment="cluster 3"
	}
)

mysql_variables=
{
	interfaces="0.0.0.0:6033;/tmp/proxysql.sock"
	monitor_username="monitor"
	monitor_password="monitor"
	commands_stats=true
	sessions_sort=true
	eventslog_filename="/var/log/proxysql/queries.log"
}

mysql_servers =
(
	{
		address = "mysql" # no default, required . If port is 0 , address is interpred as a Unix Socket Domain
		port = 3306           # no default, required . If port is 0 , address is interpred as a Unix Socket Domain
		hostgroup = 0	      # no default, required
	}
)

mysql_users:
(
	{ username = "root" }
)

mysql_query_rules:
(
	{
		rule_id=1
		active=1
		match_pattern="."
		log=1
		apply=0
	}
)
